# Discord Bot Configuration
DISCORD_BOT_TOKEN=put-your-discord-bot-token-here

# Discord Channel Configuration
# Format: DISCORD_CHANNEL_<NAME>=<CHANNEL_ID>
# Add as many channels as needed
DISCORD_CHANNEL_ALERTS=123456789012345678
DISCORD_CHANNEL_FRIDGESTATUS=123456789012345678
DISCORD_CHANNEL_GENERAL=123456789012345678

# Discord User Configuration
# Format: DISCORD_USER_<USERNAME>=<USER_ID>
# Add as many users as needed for mentions
DISCORD_USER_ADMIN=123456789012345678

# SMTP Email Configuration
# SMTP server settings (default is Resend)
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASS=your-resend-api-key-here

# Email addresses
EMAIL_FROM=your-sender@yourdomain.com
EMAIL_TO=recipient@example.com

# Email recipients by username
# Format: EMAIL_TO_<USERNAME>=<EMAIL>
# Add as many users as needed
EMAIL_TO_AARON=aaron@example.com
EMAIL_TO_ADMIN=admin@example.com
EMAIL_TO_TEAM=team@example.com